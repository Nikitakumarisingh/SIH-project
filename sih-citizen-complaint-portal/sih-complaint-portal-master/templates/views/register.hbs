<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Registration & Login</title>
  <style>
    /* Your CSS styles */
    /* CSS styles for the form */
    /* ... (existing styles) ... */
    /* CSS styles for the form */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f4f4f4;
}


.form-container {
  width: 400px;
  background-color: #fff;
  padding: 30px;
  border-radius: 8px;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
}

.form-title {
  text-align: center;
  margin-bottom: 20px;
}

.form-group {
  margin-bottom: 20px;
}

label {
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
}

input[type="text"],
textarea,
input[type="file"] {
  width: calc(100% - 12px);
  padding: 8px;
  border-radius: 4px;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

textarea {
  height: 100px;
}

input[type="submit"],
#cameraButton {
  width: calc(50% - 6px);
  padding: 10px;
  border: none;
  border-radius: 4px;
  background-color: #007bff;
  color: #fff;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

#cameraButton {
  margin-left: 6px;
  background-color: #4caf50;
}

input[type="submit"]:hover,
#cameraButton:hover {
  background-color: #0056b3;
}

input[type="submit"]:focus,
#cameraButton:focus {
  outline: none;
}
#file-complaint{
  margin: auto ;
}
#file-complaint{
  margin-left:95px ;
}

  </style>
</head>
<body>
  <div class="form-container">
    <h1 class="form-title">File Complaint</h1>
    <form id="complaintForm" enctype="multipart/form-data" action="/register" method="POST" >
    
      <div class="form-group">
        <label for="description" class="terms-text">Description:</label>
        <textarea id="description" name="description" required></textarea>
      </div>

      <div class="form-group">
        <label for="phoneNumber" class="terms-text">Phone Number:</label>
        <input type="tel" pattern="[0-9]{10}" placeholder="+91 " id="phoneNumber" name="phoneNumber" required />
      </div>

      <div class="form-group">
        {{!-- <label for="location" class="terms-text">Your location:</label> --}}
        <textarea style="display:none;" id="location" name="location" required></textarea>
      </div>

      <div class="form-group">
        <label for="Photo" class="terms-text">Upload File:</label>
      <input type="file" accept="image/*" name="Photo" capture="camera">
      <br><br>

        {{!-- <input type="file" id="fileInput" name="Photo" accept="image/*"> --}}
      <input id="file-complaint" type="submit" value="File Complaint" onclick="getLocation()">

    </form>
  </div>

<script>
const x = document.getElementById("location");

let flag = true;

function getLocation() {
  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(showPosition);
    if( flag ){
      alert("Your location is recorded");
      flag = false;
    }

    else
    {
      alert("Complaint Submitted Succesfully;");
    }

  } else { 
    x.innerHTML = "Geolocation is not supported by this browser.";
  }
}

function showPosition(position) {
  x.innerHTML = position.coords.latitude + 
  "-" + position.coords.longitude;
}

</script>

</body>
</html>
